{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://owncal.app/schemas/calendar.schema.json",
  "title": "Calendar (Flat)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "calendar_id",
    "title",
    "locale",
    "timezone",
    "maintainers",
    "tags"
  ],
  "properties": {
    "calendar_id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3,
      "maxLength": 64
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "locale": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
    },
    "timezone": {
      "type": "string",
      "minLength": 1
    },
    "maintainers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "update_frequency": {
      "type": "string",
      "enum": ["daily", "weekly", "monthly", "quarterly", "yearly", "on-demand"]
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "https://owncal.app/schemas/event.schema.json"
      }
    }
  }
}
